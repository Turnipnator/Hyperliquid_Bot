{
  "name": "hyperliquid-bot",
  "version": "1.0.0",
  "description": "Automated breakout trading bot for Hyperliquid Markets",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:paper": "TRADING_MODE=paper node dist/index.js",
    "start:live": "TRADING_MODE=live node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "trading",
    "bot",
    "hyperliquid",
    "crypto",
    "breakout"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@types/node-telegram-bot-api": "^0.64.11",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.2",
    "axios": "^1.12.2",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.2",
    "ethers": "^6.13.0",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "ws": "^8.18.3"
  }
}
