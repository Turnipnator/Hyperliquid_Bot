# Hyperliquid Configuration
HYPERLIQUID_PRIVATE_KEY=your_wallet_private_key_here
HYPERLIQUID_ACCOUNT_ADDRESS=your_wallet_address_here
HYPERLIQUID_ENV=TESTNET              # TESTNET or MAINNET

# Trading Mode
TRADING_MODE=paper                   # paper or live

# Markets to Trade (comma-separated)
# Available: BTC, AVAX, HYPE, ETH, SOL, BNB, SUI, LINK, XRP
TRADING_PAIRS=BTC,ETH,SOL,AVAX,HYPE,BNB,SUI,LINK,XRP

# Risk Management
MAX_DAILY_LOSS=100                   # Maximum daily loss in USD
MAX_POSITIONS=3                      # Maximum concurrent positions
POSITION_SIZE=10                     # Position size in USD
MAX_LEVERAGE=3                       # Maximum leverage
MAX_DRAWDOWN=10                      # Maximum drawdown percentage

# Breakout Strategy Parameters
LOOKBACK_PERIOD=10                   # Days for resistance/support calculation
VOLUME_MULTIPLIER=1.5                # Volume spike threshold
TRAILING_STOP_PERCENT=1.5            # Trailing stop distance percentage
USE_SCALPING=true                    # Enable scalping on Bollinger Bands
BREAKOUT_BUFFER=0.001                # Breakout buffer (0.1%)
TAKE_PROFIT_PERCENT=3                # Take profit target percentage

# Trend Following Strategy
ENABLE_TREND_FOLLOWING=false         # Enable trend-following for slow grinds
TREND_FOLLOWING_SMA_PERIOD=20        # SMA period for trend confirmation
TREND_FOLLOWING_MIN_CONSECUTIVE_TRENDS=3  # Min consecutive trend checks
TREND_FOLLOWING_MAX_DISTANCE_FROM_HIGH=2  # Max % distance from high/low

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=false               # Enable/disable Telegram notifications

# Logging
LOG_LEVEL=info                       # debug, info, warn, error

# Data Source for Historical Candles
BINANCE_BASE_URL=https://api.binance.com
